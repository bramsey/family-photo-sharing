<div class="picture" id="<%= picture.id %>">
	<div class="main">
		<%= link_to(picture) do %>
			<%= image_tag(picture.file_url(:thumb)) if picture.file.present? %>
		<% end %>
	</div>
	<div class="comment">
		<a href='#'><%= image_tag 'billy.png', :class => 'ava_mini', :size => '30x30' %></a>
		<p>
			by <a href="#"><%= picture.user.name || picture.user.email %></a>
		</p>
	</div>
	<div class="comments">
		<%= render picture.comments %>
	</div>
	<%= render :partial => 'comments/form', :locals => {:picture => picture} %>
</div>